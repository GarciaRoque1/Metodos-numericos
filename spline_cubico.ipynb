                    while True:
                        k+=1
                        A[i].append(0.0)
                        if(k==der):
                            break
                        
                    izq+=1
                    der-=1
                    k=0
                    break
                elif(i!=0):
                    while True:
                        l+=1
                        A[i].append(0.0)
