        for i in range(number_p):
            if(i<number_p-1):
                hi.append(ordx[i+1]-ordx[i])
                difdiv.append((ordy[i+1]-ordy[i])/hi[i])
                continue
            else:
                break
            
            
        hi=np.array(hi)
        difdiv=np.array(difdiv)
